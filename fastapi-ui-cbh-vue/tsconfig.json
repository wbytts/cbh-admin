{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "lib": ["dom", "es5", "es6", "es7", "es2015.promise"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["*", "src/*"]
    },
    "pretty": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["src/types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}